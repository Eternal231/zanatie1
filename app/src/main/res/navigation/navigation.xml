<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.myapplication.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_oneFragmentPost"
            app:destination="@id/oneFragmentPost" />
        <action
            android:id="@+id/action_feedFragment_to_newPostActivity"
            app:destination="@id/newPostActivity" />
    </fragment>
    <fragment
        android:id="@+id/newPostActivity"
        android:name="com.example.myapplication.NewPostActivity"
        android:label="activity_new_post"
        tools:layout="@layout/activity_new_post" />
    <fragment
        android:id="@+id/oneFragmentPost"
        android:name="com.example.myapplication.OneFragmentPost"
        android:label="activity_one_fragment_post"
        tools:layout="@layout/activity_one_fragment_post">
        <action
            android:id="@+id/action_oneFragmentPost_to_newPostActivity"
            app:destination="@id/newPostActivity" />
    </fragment>
</navigation>